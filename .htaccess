Options +FollowSymLinks -indexes
<IfModule mod_rewrite.c>
RewriteEngine on
RewriteCond %{HTTPS} !=on [NC]
RewriteRule ^(.*)$ https://%{HTTP_HOST%{REQUEST_URI} [L,R=301]

RewriteBase /




## If the request is for a valid directory
RewriteCond %{REQUEST_FILENAME} -d [OR]
## If the request is for a valid file
RewriteCond %{REQUEST_FILENAME} -f [OR]
## If the request is for a valid link
RewriteCond %{REQUEST_FILENAME} -l
## don't do anything
RewriteRule ^ - [L]

#Xem sản phẩm
RewriteRule ^product/([a-zA-Z0-9-/]+)$ /templates/store/view.php?id=$1 [L]
RewriteRule ^product/([a-zA-Z0-9-/]+)$ /templates/store/view.php?id=$1 [L]

#GETLINK
RewriteRule ^([^/]+)/([^/]+)/([^/]+)/?$ ?act=$1&category=$2&type=$3 [L,QSA]
RewriteRule ^([^/]+)/([^/]+)/?$ ?act=$1&category=$2 [L,QSA]
RewriteRule ^([^/]+)/?$ ?act=$1 [L,QSA]

#LOGOUT
RewriteRule ^logout$ logout.php [L]

#verifyReset
RewriteRule ^verifyReset/([a-zA-Z0-9-/]+)/([a-zA-Z0-9-/]+)$ /request_login/verifyReset.php?email=$1&code=$2 [L]
RewriteRule ^verifyReset/([^/]*)/([a-z0-9-/]+)$ /request_login/verifyReset.php?email=$1&code=$2 [L]


</IfModule>

# Bảo vệ file .htaccess
<Files .htaccess>
Order Allow,Deny
Deny from all
</Files>